<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.gocloud.goshipapp.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_estimate"
        android:name="com.gocloud.goshipapp.ui.estimate.EstimateFragment"
        android:label="@string/menu_estimate"
        tools:layout="@layout/fragment_estimate" />

    <fragment
        android:id="@+id/nav_shippingprices"
        android:name="com.gocloud.goshipapp.ui.shippingprices.ShippingPricesFragment"
        android:label="@string/menu_shippingprices"
        tools:layout="@layout/fragment_shipping_prices" />

    <fragment
        android:id="@+id/nav_tools"
        android:name="com.gocloud.goshipapp.ui.tools.ToolsFragment"
        android:label="@string/menu_tools"
        tools:layout="@layout/fragment_tools" />

    <fragment
        android:id="@+id/nav_chatbot"
        android:name="com.gocloud.goshipapp.ui.chatbot.ChatbotFragment"
        android:label="@string/menu_chatbot"
        tools:layout="@layout/fragment_chatbot" />

    <fragment
        android:id="@+id/nav_send"
        android:name="com.gocloud.goshipapp.ui.send.SendFragment"
        android:label="@string/menu_send"
        tools:layout="@layout/fragment_send" />

    <fragment
        android:id="@+id/nav_orderscustomer"
        android:name="com.gocloud.goshipapp.ui.orderscustomer.OrdersCustomerFragment"
        android:label="@string/menu_orders_customer"
        tools:layout="@layout/fragment_orders_customer" >
        <action
            android:id="@+id/action_nav_orderscustomer_to_nav_orderDetails"
            app:destination="@id/nav_orderDetails" />
    </fragment>

    <fragment
        android:id="@+id/nav_ordersvendor"
        android:name="com.gocloud.goshipapp.ui.ordersvendor.OrdersVendorFragment"
        android:label="@string/menu_orders_vendor"
        tools:layout="@layout/fragment_orders_vendor" >
        <action
            android:id="@+id/action_nav_ordersvendor_to_nav_orderDetails2"
            app:destination="@id/nav_orderDetails" />
    </fragment>
    <fragment
        android:id="@+id/nav_orderDetails"
        android:name="com.gocloud.goshipapp.ui.orderdetails.OrderDetailsFragment"
        android:label="@string/menu_orders_details" />
</navigation>